{
  "compilerOptions": {
    "rootDir": ".",
    "module": "ESNext",
    "target": "ES2017",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "types": ["node"],
    "exclude": ["**/dist/**", "**/node_modules/**"]
  }
}
